<!-- Put site-specific property overrides in this file. -->

<configuration>
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://localhost:9000/</value>
  </property>
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/Users/cntp/MyWork/DevTools/hadoop-3.3.1/tmp</value>
  </property>
<!--配置root(超级用户)允许通过代理用户所属组-->
<property>
        <name>hadoop.proxyuser.cntp.groups</name>
        <value>*</value>
</property>

<!--配置root(超级用户)允许通过代理的用户-->
<property>
        <name>hadoop.proxyuser.cntp.user</name>
        <value>*</value>
</property>

<!--配置root(超级用户)允许通过代理的IP-->
<property>
        <name>hadoop.proxyuser.cntp.hosts</name>
        <value>*</value>
</property>
</configuration>
